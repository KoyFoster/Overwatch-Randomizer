    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="No Hero Selected"
        android:id="@+id/textViewHero"
        android:enabled="false"
        android:textAlignment="center"
        android:background="#00000000"
        android:autoText="false"
        android:textColor="#ff8800"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/gridLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/buttonReset"
        android:layout_below="@+id/buttonRandHero"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play All"
        android:id="@+id/checkBoxPlayAll"
        android:checked="false"
        android:textColor="#ffffff"
        android:buttonTint="#ffffff"
        android:layout_below="@+id/buttonReset"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About"
        android:id="@+id/buttonAbout"
        android:layout_alignBottom="@+id/gridLayout"
        android:layout_alignRight="@+id/checkBoxPlayAll"
        android:layout_alignEnd="@+id/checkBoxPlayAll" />

